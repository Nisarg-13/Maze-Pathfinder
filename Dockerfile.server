# Dockerfile for WebSocket server
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./
COPY lib/ ./lib/

# Install dependencies
RUN npm ci --only=production

# Copy server file
COPY server.ts ./

# Install TypeScript for compilation
RUN npm install -g typescript tsx

# Expose port
EXPOSE 8080

# Start the server
CMD ["tsx", "server.ts"]