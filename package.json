    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.4.3",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
